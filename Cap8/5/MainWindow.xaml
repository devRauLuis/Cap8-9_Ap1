<Window
        x:Class="_5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_5"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="450"
        Width="450">
    <Grid>
        <StackPanel Margin="15,10">
            <TextBlock FontSize="18">Ingrese dos cadenas para ordenarlas</TextBlock>
            <StackPanel Margin="0,10,0,0">
                <Label>Cadena 1:</Label>
                <TextBox x:Name="Cadena1TB" />
            </StackPanel>

            <StackPanel Margin="0,10,0,0">
                <Label>Cadena 2:</Label>
                <TextBox x:Name="Cadena2TB" />
            </StackPanel>
            <Button
                    Margin="0,10,0,0"
                    Click="OrdenarCadenasClick"
                    Padding="6,3"
                    Width="100">Ordenar</Button>

            <ListBox
                    Margin="0,20,0,0"
                    x:Name="ResultadoLB"
                    Height="300" />
        </StackPanel>
    </Grid>
</Window>